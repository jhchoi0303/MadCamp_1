<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:scrollbars="vertical"
            android:scrollbarSize="10dp"
            android:scrollbarThumbVertical="@drawable/custom_scroll_style"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/modify_textView1"
                android:layout_width="202dp"
                android:layout_height="80dp"
                android:layout_marginTop="64dp"
                android:fontFamily="@font/pixel2"
                android:textColor="#ffffff"
                android:textSize="40dp"
                android:gravity="center"
                android:text="title"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/modify_imageView" />

            <ImageView
                android:id="@+id/modify_imageView"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="44dp"
                android:contentDescription="TODO"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="10dp"
                android:background="@drawable/image_stroke2"

                />

            <EditText
                android:id="@+id/modify_textView2"
                android:layout_width="wrap_content"
                android:layout_height="94dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/pixel2"
                android:gravity="center"
                android:text="content"
                android:textColor="#ffffff"
                android:textSize="23dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/modify_textView1"
                app:layout_constraintVertical_bias="0.116" />

            <Button
                android:id="@+id/modify_button"
                android:layout_width="64dp"
                android:layout_height="51dp"
                android:layout_marginTop="10dp"
                android:background="#65E456"
                android:fontFamily="@font/pixel"
                android:gravity="center"
                android:text="Save"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/modify_textView2" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>